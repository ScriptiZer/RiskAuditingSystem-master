                        let planStartDate = new Date(planstartdate);
                        let planEndDate = new Date(planenddate);
                        if (planEndDate >= planStartDate) {
                            totalPlanDays += (planEndDate - planStartDate) / (1000 * 3600 * 24);
                        }
                    }

                    // Calculate the number of days between actual start and end dates
                    if (actualstartdate && actualenddate) {
                        let actualStartDate = new Date(actualstartdate);
                        let actualEndDate = new Date(actualenddate);
                        if (actualEndDate >= actualStartDate) {
