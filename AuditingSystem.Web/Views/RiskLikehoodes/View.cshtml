@model RiskLikehood
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<link href="~/css/addeditstyle.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">View Risk Liklihood</h4>
                <form class="forms-sample" id="EditForm">

                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input disabled asp-for="Name" type="text" class="form-control" id="Name" name="Name" placeholder="Risk Liklihood Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="Rate">Rate</label>
                        <input disabled asp-for="Rate" type="text" class="form-control" id="Rate" name="Rate" placeholder="Rate">
                        <span asp-validation-for="Rate" class="text-danger"></span>
                    </div>
                    <div class="float-end mt-2">
                        <button id="btnCancel" class="btn btn-secondary">Cancel</button>
                        <button disabled id="saveButton" type="button" class="btn btn-primary me-2">Save Data</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#Description').summernote();
            $("#EditForm").validate({
                rules: {
                    Name: {
                        required: true
                    },
                    Rate: {
                        required: true
                    }
                },
                messages: {
                    Name: {
                        required: "The Name field is required"
                    },
                    Rate: {
                        required: "The Rate field is required"
                    }
                },
                errorPlacement: function (error, element) {
                    if (element.is("select")) {
                        error.insertAfter(element.siblings("span"));
                    } else {
                        error.insertAfter(element);
                    }
                }
            });

            $(document).on("click", "#btnCancel", function (e) {
                e.preventDefault();
                window.location.href = '/RiskLikehoodes/Index';
            });

            $("#saveButton").click(function () {
                var htmlDescription = $('#Description').summernote('code');

                if ($("#EditForm").valid()) {
                    var formData = {
                        Name: $("#Name").val(),
                        Rate: parseInt($("#Rate").val())
                    };

                    swal({
                        title: "Saving...",
                        text: "Please wait.",
                        allowOutsideClick: false,
                        showConfirmButton: false,
                        showCancelButton: false,
                        showCloseButton: false,
                        onBeforeOpen: () => {
                            swal.showLoading();
                        }
                    });

                    setTimeout(function () {
                        $.ajax({
                            url: "/api/RiskLikehoods/@Model.Id",
                            method: "PUT",
                            dataType: 'json',
                            contentType: "application/json",
                            data: JSON.stringify(formData),
                            success: function (response) {
                                swal.close();
                                swal({
                                    title: "Success",
                                    text: "Your data has been saved",
                                    icon: "success",
                                    position: "top-end",
                                    timer: 2000,
                                    allowOutsideClick: false,
                                    showConfirmButton: false,
                                    showCancelButton: false,
                                    showCloseButton: false
                                }).then(function () {
                                    window.location.href = '/RiskLikehoodes/Index';
                                });
                            },
                            error: function (error) {
                                if (error.responseJSON && error.responseJSON.errors) {
                                    swal({
                                        title: "Opps...",
                                        text: "Something went wrong!",
                                        icon: "error",
                                        position: "top-end",
                                        timer: 2000,
                                        allowOutsideClick: false,
                                        showConfirmButton: false,
                                        showCancelButton: false,
                                        showCloseButton: false
                                    });
                                }
                            }
                        });
                    }, 2000);
                }
            });
        });
    </script>
}
